@model Bibliotekarz.Model.AddBookViewModel

<div>
    <form method="post" asp-action="AddBook">
        <div class="form-group">
            <label asp-for="Title">Tytuł</label>
            <input class="form-control" asp-for="Title" placeholder="Podaj tytył książki ..." />
        </div>

        <div class="form-group">
            <label asp-for="Author">Autor</label>
            <input class="form-control" asp-for="Author" placeholder="Podaj autora książki książki ..." />
        </div>

        <div class="form-group">
            <label asp-for="PageCount">Liczba stron</label>
            <input class="form-control" asp-for="PageCount" />
        </div>

        <div class="form-group">
            <label asp-for="IsBorrowed">Czy wypożyczona</label>
            <input class="form-control" type="checkbox" asp-for="IsBorrowed" />
        </div>

        <button type="submit" class="btn btn-primary">Zapisz</button>
    </form>
</div>